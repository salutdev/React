/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transition all 0.5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
&.order-enter-active
  background yellow
  max-height 60px
  padding 2rem !important
  transformX(0)

  .order-leave
    transition all 0.5s
    transformX(0)
    &.order-leave-active
    transform translateX(120%)
    max-height 0
    padding 0

.count-enter
  transition all 2.5s
  transofrm translateY(100%)
  &.count-enter-active
  transofrm translateY(0)

  .count-leave
    transition all 0.5s
    position absolute
    left 0
    bottom 0
    tranform translateY(0)
    &.count-leave-active